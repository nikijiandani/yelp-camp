<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Add a new Comment to <%= campground.name %></h1>
        
        <div class="miniform">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Add your comments here..." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>    

<% include ../partials/footer %>
